<header class="glass-header">

    <div id="glass-cover-image" class="glass-cover"></div>
    
	<div class="glass-header-wrapper">

		{{#if posts}} <!-- if homepage -->
			<h1 class="glass-headline">{{@blog.title}}</h1>
			{{#if @blog.description}}
				<p class="glass-blog-description">{{@blog.description}}</p>
			{{/if}}
		{{else}}
			<h1 class="glass-headline" itemprop="headline">{{title}}</h1>
		{{/if}}

	</div>

	<a id="glass-scroll-button" href="#glass-page-body"></a>
</header>
