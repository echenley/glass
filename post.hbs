{{!< default}}

<main class="glass-main" role="main">
    {{#post}}
    <article class="glass-post" role="article" itemscope itemtype="http://schema.org/Article">

        <header class="glass-post-header">
            <time class="glass-date" datetime="{{date format="YYYY-MM-DD"}}" itemprop="datePublished">
                {{date format='dddd DD MMM YYYY'}}
            </time>
            <h1 class="glass-post-title" itemprop="headline">{{title}}</h1>
        </header>

        <section class="glass-post-body" itemprop="articleBody">
            {{content}}
        </section>

        {{#if tags}}
            <div class="glass-tags">
                Tags: {{tags separator=" | "}}
            </div>
        {{/if}}

            <div class="glass-sharing">

                <h4 class="glass-share-header">Share this post: &nbsp;</h4>

                <a class="glass-share icon-twitter" target="_blank" href="http://twitter.com/share?text={{title}}&url={{url absolute="true"}}">
                    <span class="glass-hidden">Twitter</span>
                </a>
                <a class="glass-share icon-facebook" target="_blank" href="http://www.facebook.com/sharer.php?u={{url absolute="true"}}">
                    <span class="glass-hidden">Facebook</span>
                </a>
                <a class="glass-share icon-gplus" target="_blank" href="https://plus.google.com/share?url={{url absolute="true"}}">
                    <span class="glass-hidden">Google+</span>
                </a>

            </div>

    </article>
    {{/post}}

    {{#if pagination}}
        <div class="glass-pagination">
            {{{pagination}}}
        </div>
    {{/if}}

</main>